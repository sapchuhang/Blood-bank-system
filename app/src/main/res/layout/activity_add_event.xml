<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddEvent"
    android:layout_margin="20dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/blood_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/eteventname"
            style="@style/textStyle1"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:hint="Enter Event Name"
            android:maxLines="1"
            android:text="" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/eteventname"
            android:layout_marginLeft="35dp"
            android:background="#CF8086" />

        <EditText
            android:id="@+id/eteventaddress"
            style="@style/textStyle1"
            android:layout_below="@+id/eteventname"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:hint="Enter Address"
            android:maxLines="1"
            android:text="" />

        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/eteventaddress"
        android:layout_marginLeft="35dp"
        android:background="#CF8086" />

        <TextView
            android:id="@+id/eteventstarttime"
            style="@style/textStyle1"
            android:layout_below="@+id/eteventaddress"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:hint="Enter Start time"
            android:maxLines="1"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/eteventstarttime"
            android:layout_marginLeft="35dp"
            android:background="#CF8086" />

        <TextView
            android:id="@+id/eteventendtime"
            style="@style/textStyle1"
            android:layout_below="@+id/eteventstarttime"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:hint="Enter End time"
            android:maxLines="1"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/eteventendtime"
            android:background="#CF8086" />

        <TextView
            android:id="@+id/eteventdate"
            style="@style/textStyle1"
            android:layout_below="@+id/eteventendtime"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:hint="Enter Date"
            android:maxLines="2"
            android:text="" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/eteventdate"
            android:background="#CF8086" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnAddev"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_button"
        android:drawableLeft="@drawable/ic_touch_app_black_24dp"
        android:paddingRight="20dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnbck"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_button"
        android:drawableLeft="@drawable/ic_touch_app_black_24dp"
        android:paddingRight="20dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp" />

</LinearLayout>