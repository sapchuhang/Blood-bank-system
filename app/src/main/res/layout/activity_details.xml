<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwhite"
    android:orientation="vertical"
    tools:context=".DetailsActivity"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/blood_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp">
    <ImageView
        android:id="@+id/imgProfile"
        android:src="@drawable/noavatar"
        android:layout_width="250dp"
        android:layout_height="250dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvName"
        style="@style/textStyle"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Contact name" />

    <TextView
        style="@style/textStyle"
        android:drawableLeft="@drawable/ic_contacts_black_24dp"
        android:id="@+id/tvPhoneNo"
        android:layout_below="@+id/tvName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Phone no" />

    <TextView
        style="@style/textStyle"
        android:id="@+id/tvEmail"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_below="@+id/tvPhoneNo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Email Id"
        />

    <TextView
        android:id="@+id/tvAddress"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        style="@style/textStyle"
        android:layout_below="@+id/tvEmail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Address"
        />

    <TextView
        android:id="@+id/tvGender"
        android:drawableLeft="@drawable/ic_list_black_24dp"
        style="@style/textStyle"
        android:layout_below="@+id/tvAddress"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Gender"
        />

    <TextView
        android:id="@+id/tvBlood"
        style="@style/textStyle"
        android:layout_below="@+id/tvGender"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:hint="Blood Group"
        android:drawableLeft="@drawable/ic_blood"/>

</LinearLayout>