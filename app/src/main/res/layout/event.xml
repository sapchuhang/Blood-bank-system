<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/backgroundwhite"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/blood_logo"/>


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvEname"
        style="@style/textStyle2"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:hint="Event Name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEaddress"
        style="@style/textStyle2"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:layout_marginBottom="10dp"
        android:hint="Event address" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEstarttime"
        style="@style/textStyle2"
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:layout_marginBottom="10dp"
        android:hint="Event Satrt time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEendtime"
        style="@style/textStyle2"
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:layout_marginBottom="10dp"
        android:hint="Event End time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />

    <TextView
        android:id="@+id/tvEdate"
        style="@style/textStyle2"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:layout_marginBottom="10dp"
        android:hint="Event Start Date" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#CF8086" />
</LinearLayout>
